class BackupLocationsController < ApplicationController
  before_action :set_backup_location, only: [:show, :edit, :update, :destroy]

  # GET /backup_locations
  # GET /backup_locations.json
  def index
    @backup_locations = BackupLocation.all
  end

  # GET /backup_locations/1
  # GET /backup_locations/1.json
  def show
  end

  # GET /backup_locations/new
  def new
    @backup_location = BackupLocation.new
  end

  # GET /backup_locations/1/edit
  def edit
  end

  # POST /backup_locations
  # POST /backup_locations.json
  def create
    @backup_location = BackupLocation.new(backup_location_params.permit(:path))

    respond_to do |format|
      if @backup_location.save
        format.html { redirect_to @backup_location, notice: 'Backup location was successfully created.' }
        format.json { render :show, status: :created, location: @backup_location }
      else
        format.html { render :new }
        format.json { render json: @backup_location.errors, status: :unprocessable_entity }
      end
    end
  end

  # PATCH/PUT /backup_locations/1
  # PATCH/PUT /backup_locations/1.json
  def update
    respond_to do |format|
      if @backup_location.update(backup_location_params)
        format.html { redirect_to @backup_location, notice: 'Backup location was successfully updated.' }
        format.json { render :show, status: :ok, location: @backup_location }
      else
        format.html { render :edit }
        format.json { render json: @backup_location.errors, status: :unprocessable_entity }
      end
    end
  end

  # DELETE /backup_locations/1
  # DELETE /backup_locations/1.json
  def destroy
    @backup_location.destroy
    respond_to do |format|
      format.html { redirect_to backup_locations_url, notice: 'Backup location was successfully destroyed.' }
      format.json { head :no_content }
    end
  end

  private
    # Use callbacks to share common setup or constraints between actions.
    def set_backup_location
      @backup_location = BackupLocation.find(params[:id])
    end

    # Never trust parameters from the scary internet, only allow the white list through.
    def backup_location_params
      params[:backup_location]
    end
end
