<%= form_for(@backup_location) do |f| %>
  <% if @backup_location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@backup_location.errors.count, "error") %> prohibited this backup_location from being saved:</h2>

      <ul>
      <% @backup_location.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div>
    <%= f.text_field :path %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
